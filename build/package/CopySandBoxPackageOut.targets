<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="14.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <ItemGroup>
        <_SandBoxPackageOutputFile Include="$(SdkInstallerFile)" />
    </ItemGroup>

    <Target Name="CopySandBoxPackageOut" Condition="'$(IsDebianBaseDistro)' == 'true'" DependsOnTargets="SetupDebProps">
      <Copy
      SourceFiles="@(_SandBoxPackageOutputFile)"
      DestinationFolder="$(RepoRoot)/$(RelativeSandBoxPackageOutputFolder)"/>
    </Target>

    <Target Name="CopySandBoxPackageOut" Condition=" '$(IsRPMBasedDistro)' == true " DependsOnTargets="SetupRpmProps">
      <Copy
      SourceFiles="@(_SandBoxPackageOutputFile)"
      DestinationFolder="$(RepoRoot)/$(RelativeSandBoxPackageOutputFolder)"/>
    </Target>
</Project>
